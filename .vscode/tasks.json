{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_for_rp2040",
            "type": "shell",
            "command": "cargo",
            "args": ["build", "--target", "thumbv6m-none-eabi"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "cargo",
            "args": ["test", "--target", "x86_64-apple-darwin"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$rustc"
        }
    ]
}
