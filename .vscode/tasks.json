{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildLeadBarryDebug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "command": "cargo",
            "args": [
                "lead_barry_build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "BuildLeadBarryRelease",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "command": "cargo",
            "args": [
                "lead_barry_release_build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "RunTests",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "command": "cargo",
            "args": [
                "test",
                "--target",
                "x86_64-apple-darwin"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "cargo run embedded",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "command": "cargo",
            "args": [
                "run",
                "--target",
                "thumbv6m-none-eabi"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$rustc"
        }
    ]
}
